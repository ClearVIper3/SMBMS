<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0"
         metadata-complete="true">

    <!--欢迎页面-->
    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>
    
    <filter>
        <filter-name>EncodingCharacterFilter</filter-name>
        <filter-class>com.viper.filter.EncodingCharacterFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>EncodingCharacterFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>SysFilter</filter-name>
        <filter-class>com.viper.filter.SysFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>SysFilter</filter-name>
        <url-pattern>/jsp/*</url-pattern>
    </filter-mapping>
    
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.viper.servlet.user.LoginServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login.do</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.viper.servlet.user.LogoutServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/user/logout</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>PwdModifyServlet</servlet-name>
        <servlet-class>com.viper.servlet.user.PwdModifyServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>PwdModifyServlet</servlet-name>
        <url-pattern>/user/pwdModify</url-pattern>
    </servlet-mapping>

    <!--注册UserServlet页面-->
    <servlet>
        <servlet-name>UserServlet</servlet-name>
        <servlet-class>com.viper.servlet.user.UserServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>UserServlet</servlet-name>
        <url-pattern>/jsp/user.do</url-pattern>
    </servlet-mapping>

    <!--注册ProviderServlet页面-->
    <servlet>
        <servlet-name>ProviderServlet</servlet-name>
        <servlet-class>com.viper.servlet.provider.ProviderServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProviderServlet</servlet-name>
        <url-pattern>/jsp/provider.do</url-pattern>
    </servlet-mapping>

    <!--注册BillServlet页面-->
    <servlet>
        <servlet-name>BillServlet</servlet-name>
        <servlet-class>com.viper.servlet.bill.BillServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BillServlet</servlet-name>
        <url-pattern>/jsp/bill.do</url-pattern>
    </servlet-mapping>

    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>
</web-app>